{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "packages/*"]
    },
    "outDir": "./dist"
  },
  "include": [
    "packages/**/*",
    "scripts/**/*"
  ],
  "exclude": ["node_modules", "**/node_modules/*"]
}
