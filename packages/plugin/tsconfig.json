{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "typescript": ["./node_modules/typescript"],
      "typescript/*": ["./node_modules/typescript/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./out"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["../../node_modules/**/*"]
}

